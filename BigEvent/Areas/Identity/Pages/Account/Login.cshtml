@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section StyleCss
{
    <link rel="stylesheet" href="~/css/login.css"/>
}

<h1 class="font-title">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary ">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    @{
        //buttons to login
    }
    <div class="col-md-6 col-md-offset-2">
        <h3>Use existing acount:</h3>
        <a class="btn-login btn-user d-block mt-3 p-4 pt-1" href="http://">
            <img class="" src="~/icons/Person1.svg" alt="person Icon" height="40px">
            <span class=" btn-user-type">Basic User</span>
            <span class=" btn-user-name">Log in as </span>

        </a>
        @{
            //todo zmien icony
        }
        <a class="btn-login btn-organizer d-block mt-3 p-4 pt-1" href="http://">
            <img class="" src="~/icons/Person2.svg" alt="person Icon" height="40px">
            <span class=" btn-user-type">Organizer</span>
            <span class=" btn-user-name">Log in as </span>

        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}