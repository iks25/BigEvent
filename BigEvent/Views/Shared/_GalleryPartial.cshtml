@model List<Image>


<div class="gallery-bg">

    <div class="gallery-container">
        <div class="gallery-frame">

            <div class="gallery-head">
                <div class="galleryTitle text-center font-title">
                    Chose Picture
                    <button class="close-gallery">X</button>
                </div>
            </div>
            <div class="scroll-div">
                <div class="gallery-content">


                    @foreach (var item in Model)
                    {
                        var imgId = "galleryImg" + item.ImageId;

                        <div id=@imgId class="gallery-picture-container" data-pictureId=@item.ImageId onclick="chooseImage(this)">
                            <div class="m-auto">
                                <img class="img-center" src="@item.Src" alt="@item.Name" width="100%" />
                            </div>
                            <div class="gallery-picture-title">
                                @item.Name
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>

    </div>
</div>